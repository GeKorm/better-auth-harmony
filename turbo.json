{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build", "^typecheck"],
      "env": ["CHECK_REDOS"]
    },
    "//#lint:root": {
      "inputs": [
        "*",
        "!packages/",
        "!.yarn/",
        "!.idea/",
        "!.changeset/",
        ".github/**/*",
        "!.dockerignore",
        "!.npmrc",
        "!.prettierignore",
        "!.prettierrc",
        "!.git-blame-ignore-revs",
        "!.github/actions/yarn-nm-install/action.yml"
      ],
      "env": ["CHECK_REDOS"]
    },
    "emit-types-base": {
      "dependsOn": ["^emit-types"],
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
    },
    "emit-types": {
      "dependsOn": ["emit-types-base"],
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
    },
    "typecheck": {
      "dependsOn": ["^build", "^emit-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "env": ["GITHUB_ACTIONS"],
      "outputs": ["coverage/**", ".db/**"]
    },
    "test:watch": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
