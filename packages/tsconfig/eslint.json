{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.cjs",
    "${configDir}/src/**/*.mjs",
    "${configDir}/*.ts",
    "${configDir}/*.js",
    "${configDir}/*.cjs",
    "${configDir}/*.mjs"
  ]
}
